upstream stage.api.truck-n {
    server 10.0.2.217:22000 max_fails=1 fail_timeout=60s;
}

upstream stage.charge-n.mobile {
    server 10.0.78.41:21011 max_fails=1 fail_timeout=60s;
}

server {
    listen       443 ssl;
    server_name  ~^stage\.api\.truck-n\.com$;
    root /srv/truck-n/stage.api/;

    access_log  /var/log/nginx/truck-n/stage_api_truck-n_com-all main;

    ssl                  on;
    ssl_certificate      /etc/nginx/keys/truck-n/stage.api/stage_api_truck-n_com.chained.crt;
    ssl_certificate_key  /etc/nginx/keys/truck-n/stage.api/stage_api_truck-n_com.key;

    ssl_session_timeout  5m;

    ssl_protocols  SSLv3 TLSv1;
    ssl_ciphers  HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers   on;

    location /charge {
        proxy_pass http://stage.charge-n.mobile;
        proxy_set_header HOST $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_redirect off;
        proxy_connect_timeout 45s;
        proxy_next_upstream error timeout invalid_header;
    }
    location = /order {
        proxy_pass http://10.0.7.139:3000;
        proxy_set_header HOST $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_redirect off;
        proxy_connect_timeout 45s;
        proxy_next_upstream error timeout invalid_header;
    }
    location / {
        proxy_pass http://stage.api.truck-n;
        proxy_set_header HOST $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_redirect off;
        proxy_connect_timeout 45s;
        proxy_next_upstream error timeout invalid_header;
    }
}


